<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Turismo_Vedra" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="viewCustom">
        <item name="android:layout_height">185dp</item>
        <item name="android:layout_width">185dp</item>
    </style>
    <style name="botonNegocio">
        <item name="android:layout_height">260dp</item>
        <item name="android:layout_width">400dp</item>
    </style>
    <style name="botonQueVer">
        <item name="android:layout_height">270dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="botonGrande">
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_width">180dp</item>
    </style>
    <style name="botonGrande2">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_weight">1</item>

    </style>
    <style name="SplashTheme" parent="Theme.Turismo_Vedra">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AlertTheme" parent="Theme.AppCompat.Dialog.Alert">

        <item name="colorAccent">@color/dialogColor</item>

    </style>

</resources>