<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativePrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".queVer.naturaleza"
    android:padding="20dp">

    <ImageButton
        android:id="@+id/logoVedra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:contentDescription="@string/logoVedra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo_concello_vedra"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/menuHamburguesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:background="#FFFFFF"
        android:contentDescription="@string/menuHamburguesa"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_hamburguesa" />

    <TextView
        android:id="@+id/tvQueVer"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/abel"
        android:gravity="center_horizontal"
        android:text="@string/queVer"
        android:textColor="@color/greenVedra"
        android:textSize="24sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:contentDescription="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- O QUE VAIA DENTRO DO SCROLL VIEW MÉTESE AQUÍ-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/boton1"
                    style="@style/botonNegocio"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="arearecreativadeagronovo"
                    android:backgroundTint="#00F1ECEC"
                    android:scaleType="fitXY"
                    android:src="@drawable/botonarearecreativadeagronovo" />

                <ImageButton
                    android:id="@+id/boton2"
                    style="@style/botonNegocio"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="cubelas"
                    android:backgroundTint="#00F1ECEC"
                    android:scaleType="fitXY"
                    android:src="@drawable/botoncubelas" />

                <ImageButton
                    android:id="@+id/boton3"
                    style="@style/botonNegocio"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="miradordegundian"
                    android:backgroundTint="#00F1ECEC"
                    android:scaleType="fitXY"
                    android:src="@drawable/botonmiradordegundian" />

                <ImageButton
                    android:id="@+id/boton4"
                    style="@style/botonNegocio"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="campodegundian"
                    android:backgroundTint="#00F1ECEC"
                    android:scaleType="fitXY"
                    android:src="@drawable/botoncampodegundian" />

                <ImageButton
                    android:id="@+id/boton5"
                    style="@style/botonNegocio"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="coutodeximonde"
                    android:backgroundTint="#00F1ECEC"
                    android:scaleType="fitXY"
                    android:src="@drawable/botoncoutodeximonde" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvInformacionTuristica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|bottom"
                        android:layout_alignParentBottom="true"
                        android:text="@string/informacionTuristica"
                        android:textColor="@color/greenVedra" />

                    <TextView
                        android:id="@+id/tvWebVedra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="end|bottom"
                        android:text="@string/webVedra"
                        android:textColor="@color/black" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
