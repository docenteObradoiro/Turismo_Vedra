<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativePrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productoresLocales.Adegas"
    android:padding="20dp">

    <ImageButton
        android:id="@+id/logoVedra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:contentDescription="@string/logoVedra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo_concello_vedra"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/menuHamburguesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:background="#FFFFFF"
        android:contentDescription="@string/menuHamburguesa"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_hamburguesa" />

    <TextView
        android:id="@+id/tvAdegas"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/abel"
        android:gravity="center_horizontal"
        android:text="@string/adegas"
        android:textColor="@color/greenVedra"
        android:textSize="24sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:contentDescription="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/adegaValdes"
                style="@style/botonNegocio"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="Adega ValdÃ©s"
                android:backgroundTint="#00F1ECEC"
                android:scaleType="fitXY"
                android:src="@mipmap/adegavaldes" />
            <ImageButton
                android:id="@+id/pazoGalegos"
                style="@style/botonNegocio"
                android:layout_below="@+id/adegaValdes"
                android:layout_alignParentStart="true"
                android:contentDescription="Pazo de Galegos"
                android:backgroundTint="#00F1ECEC"
                android:scaleType="fitXY"
                android:src="@mipmap/pazodegalegos" />
            <ImageButton
                android:id="@+id/agroverde"
                style="@style/botonNegocio"
                android:layout_below="@+id/pazoGalegos"
                android:layout_alignParentStart="true"
                android:contentDescription="AGROVEDRE PACEGO S.L"
                android:backgroundTint="#00F1ECEC"
                android:scaleType="fitXY"
                android:src="@mipmap/bodegasbarallobre" />
            <ImageButton
                android:id="@+id/lixeles"
                style="@style/botonNegocio"
                android:layout_below="@+id/agroverde"
                android:layout_alignParentStart="true"
                android:contentDescription="Lixeles"
                android:backgroundTint="#00F1ECEC"
                android:scaleType="fitXY"
                android:src="@mipmap/lixeles" />
            <ImageButton
                android:id="@+id/solagra"
                style="@style/botonNegocio"
                android:layout_below="@+id/lixeles"
                android:layout_alignParentStart="true"
                android:contentDescription="Solagra"
                android:backgroundTint="#00F1ECEC"
                android:layout_marginBottom="40dp"
                android:scaleType="fitXY"
                android:src="@mipmap/solagra" />

            <TextView
                android:id="@+id/tvInformacionTuristica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:gravity="start|bottom"
                android:text="@string/informacionTuristica"
                android:textColor="@color/greenVedra" />

            <TextView
                android:id="@+id/tvWebVedra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:gravity="end|bottom"
                android:text="@string/webVedra"
                android:textColor="@color/black" />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>